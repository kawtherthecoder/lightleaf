<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_my_garden"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/mygarden_back"
        tools:context="com.example.kawtherrouabhi.lightleaf.MyGarden2Activity">

        <!--ActionBar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2E7D32"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_arrow"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/backtohome"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mygarden_actionbar"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plus_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/addplant"/>

        </RelativeLayout>

        <!--SEARCH PLANTS-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99ffffff"
            android:orientation="horizontal">

            <SearchView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:queryHint="Search Plants"
                android:iconifiedByDefault="false">

            </SearchView>

            <!--SORT BY SPINNER
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:backgroundTint="#99ffffff"
                android:entries="daldsh"
                />
            -->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!--PLANT 1-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#99ffffff"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/plant1">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/appleicon" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plant3"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num3harvested"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--PLANT 2-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#99ffffff"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/pumpkinicon" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plant4"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num4harvested"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--PLANT 3-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#99ffffff"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/roseicon" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plant5"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num5harvested"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--PLANT 4-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#99ffffff"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/strawberryicon" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plant1"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num1harvested"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--PLANT 5-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#99ffffff"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/watermelonicon" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plant2"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num2harvested"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

